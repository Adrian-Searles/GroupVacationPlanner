upstream postgres {
    server localhost:5000;
}

server {
    listen 80;
    listen [::]:80;
    server_name  127.0.0.1;
    location /register {
        proxy_pass   http://flask-api:5000/register;
    }
    location /hit {
        proxy_pass   http://app:8000/visitor;
    }
    location /hit/reset {
        proxy_pass   http://app:8000/visitor/reset;
    }
}

