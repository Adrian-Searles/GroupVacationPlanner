upstream postgres {
    server web:5000;
}

server {
    listen       80;
    server_name  flask-api;
    location /register {
        proxy_pass   http://flask-api:5000/register;
    }
    location /hit {
        proxy_pass   http://app:8000/visitor;
    }
    location /hit/reset {
        proxy_pass   http://app:8000/visitor/reset;
    }
}

